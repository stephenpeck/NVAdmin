<td colspan=5>							<table class="table table-striped table-bordered table-hover">								<tr>									<th> Function </th>									<th> Description </th>									<td  ></td>									</tr>								{assign var=arCOMPANYFUNCTIONS value=$arCOMPANY[row].COMPANY_FUNCTIONS}								{section name=row2 loop=$arCOMPANYFUNCTIONS}									<form action="{$SESSION.PostAction}" method="post">									<input type="hidden" name="COMPANY[CO_KEY]" value="{$arCOMPANY[row].CO_KEY}" />									<input type="hidden" name="COMPANY_FUNCTIONS[CF_KEY]" value="{$arCOMPANYFUNCTIONS[row2].CF_KEY}" />									<input type="hidden" name="action" value="DelCompanyFunctions" />										<tr >											<td> {$arCOMPANYFUNCTIONS[row2].FU_NAME} </th>											<td> {$arCOMPANYFUNCTIONS[row2].FU_DESCRIPTION} </th>											<td><button type="submit" class="btn btn-primary">Del</button> </td>										</tr>									</form>								{/section}													<form action="{$SESSION.PostAction}" method="post">								<input type="hidden" name="COMPANY[CO_KEY]" value="{$arCOMPANY[row].CO_KEY}" />								<input type="hidden" name="COMPANY_FUNCTIONS[CF_KEY]" value="{$arCOMPANYFUNCTIONS[row2].FU_KEY}" />								<input type="hidden" name="COMPANY_FUNCTIONS[CF_COMPANY]" value="{$arCOMPANY[row].CO_COMPANY}" />								<input type="hidden" name="action" value="UpdCompanyFunctions" />									<tr >										<td colspan=2> {html_options class="form_control" name=COMPANY_FUNCTIONS[CF_FUKEY] options=$arFunctionList} </th>										<td><button type="submit" class="btn btn-primary">Add</button> </td>									</tr>								</form>							</table>							</td>					<tr>														{/section}						<tr >				<form action="{$SESSION.PostAction}" method=post>				<input type="hidden" name="COMPANY[CO_KEY]" value="" />				<input type="hidden" name="action" value="UpdCompany" />					<tr >						<td><input type=text class="form-control" name=COMPANY[CO_COMPANY] ></td>						<td><input type=text class="form-control" name=COMPANY[CO_NAME] ></td>						<td colspan="2"> <button type="submit" class="btn btn-primary">Add</button> </td>				</form>			</tr>			</table>  </div>  <div class="col-sm-1" ></div></div>	{include file=$SESSION.ENVIRONMENT.EN_FOOTER}

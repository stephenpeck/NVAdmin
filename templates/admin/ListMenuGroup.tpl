{include file=$SESSION.ENVIRONMENT.EN_HEADER} <div class="row">  <div class="col-sm-3" ></div>  <div class="col-sm-6" >  		<table class="table table-striped table-bordered table-hover">			<thead>			<tr ><th class="title" colspan="9">Menu Admin</th></tr>				<tr >					<td class="col-md-1" >Seq</td>					<td class="col-md-5">Menu Group Name</td>					<td class="col-md-3">Display Menu Group</td>					<td class="col-md-3">Edit/Show Menu Groups</td>					</tr>			</thead>				{section name=menu loop=$arMENU_GROUP}				{strip}					<form action="{$SESSION.PostAction}" method="post">						<input type="hidden" name="MENU_GROUP[MG_KEY]" value="{$arMENU_GROUP[menu].MG_KEY}" />						<input type="hidden" name="action" value="ShowMenuGroup" />							<tr >								<td>{$arMENU_GROUP[menu].MG_SEQ}</td>								<td>{$arMENU_GROUP[menu].MG_NAME}</td>								<td>{$arMENU_GROUP[menu].MG_DISPLAY}</td>												<td><button type="submit" class="btn btn-primary">Amend</button> </td>							</tr>					</form>				{/strip}				{/section}						<tr >				<form action="{$SESSION.PostAction}" method=post>					<input type=hidden name=action value="UpdMenuGroup">					<input type=hidden name=MENU_GROUP[MG_KEY] value="" >					<td> <input class="form-control" type=text name=MENU_GROUP[MG_SEQ]></td>					<td> <input class="form-control" type=text name=MENU_GROUP[MG_NAME] size=20></td>					<td>{html_options class="form-control" name="MENU_GROUP[MG_DISPLAY]" options=$arYesNo selected=$arMENU_GROUP[menu].MG_DISPLAY}</td>																<td colspan="2"> <button type="submit" class="btn btn-primary">Add</button> </td>				</form>			</tr>			</table>  </div>  <div class="col-sm-3" ></div></div>	{include file=$SESSION.ENVIRONMENT.EN_FOOTER}

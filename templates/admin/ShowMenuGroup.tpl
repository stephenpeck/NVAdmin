{include file=$SESSION.ENVIRONMENT.EN_HEADER} <div class="row">  <div class="col-sm-1" ></div>  <div class="col-sm-10" >		<table class="table table-striped table-bordered table-hover">			<thead>				<tr ><th colspan=5 class="title">Update Menu Group</th></tr>					<tr  align="center">					<td >Seq</td>					<td >Menu Group Name</td>					<td >Display Group Name</td>					<td colspan="2">Update/Delete Menu Groups</td>				</tr>			</thead>			{if $MENU_GROUP.MG_KEY == ""}			<tr>				<th colspan=2> Please add Menu Group details before setting up Menu Items </th>			</tr>		</table>				{else}			<tr >				<form action={$SESSION.PostAction} method=post>					<input type=hidden name=action value="UpdMenuGroup">					<input type=hidden name=MENU_GROUP[MG_KEY] value={$MENU_GROUP.MG_KEY} >					<td> <input type=text class="form-control" size=2 name="MENU_GROUP[MG_SEQ]" value="{$MENU_GROUP.MG_SEQ}" ></td>					<td> <input type=text class="form-control" size=20 name="MENU_GROUP[MG_NAME]" value="{$MENU_GROUP.MG_NAME}" ></td>					<td>{html_options class="form-control" name="MENU_GROUP[MG_DISPLAY]" options=$arYesNo selected=$MENU_GROUP.MG_DISPLAY}</td>											<td> <button type="submit" class="btn btn-primary">Update Menu Group</button> </td>				</form>				<form>					<input type=hidden name=action value="DelMenuGroup">					<input type=hidden name=MENU_GROUP[MG_KEY] value={$MENU_GROUP.MG_KEY} >					<th onclick="return confirm('Are you sure you want to delete this?')"> <button type="submit" class="btn btn-primary">Delete Menu Group</button></th>				</form>			</tr>		</table>		{/if}	<!--  end of form -->		<br></br>		<table class="table table-striped table-bordered table-hover">			<thead>			<tr ><th colspan="9"  class="title">Update Menu Information</th></tr>			<tr  align="left">				<td >Name</td>				<td >Item Script</td>				<td >Security Level</td>				<td >Order</td>				<td >Back Script</td>				<td >Next Script</td>				<td >Display Item</td>																<td  colspan="2">Edit Menu Item</td>			</tr>			</thead>			<!--  end of form -->			<!-- now do looping table to show security -->		{if $MENU_GROUP.MG_KEY == ""}			<tr>				<th colspan=2> Please add Menu Group before adding Menu Items </th>			</tr>		</table>					{else}			{section name=row loop=$arMENU_ITEMS}				<!-- now do looping table to Menu Items -->			<tr >				<form action={$SESSION.PostAction} method=post>					<input type=hidden name=action value="UpdMenuItems">					<input type=hidden name=MENU_ITEMS[MI_KEY] value={$arMENU_ITEMS[row].MI_KEY} >					<input type=hidden name=MENU_GROUP[MG_KEY] value={$MENU_GROUP.MG_KEY} >									<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_NAME] size=20 value="{$arMENU_ITEMS[row].MI_NAME}" ></td>					<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_SCRIPT] size=20 value="{$arMENU_ITEMS[row].MI_SCRIPT}" ></td>					<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_LEVEL] size=2 value="{$arMENU_ITEMS[row].MI_LEVEL}" ></td>					<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_ORDER] size=2 value="{$arMENU_ITEMS[row].MI_ORDER}" ></td>					<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_BACKSCRIPT] size=20 value="{$arMENU_ITEMS[row].MI_BACKSCRIPT}" ></td>					<td> <input type=text  class="form-control" name=MENU_ITEMS[MI_NEXTSCRIPT] size=20 value="{$arMENU_ITEMS[row].MI_NEXTSCRIPT}" ></td>					<td>{html_options  class="form-control" name="MENU_ITEMS[MI_DISPLAY]" options=$arYesNo selected=$arMENU_ITEMS[row].MI_DISPLAY}</td>										<td> <button type="submit" class="btn btn-primary">Update Menu Item</button> </td>				</form>				<form action={$SESSION.PostAction} method=post>					<input type=hidden name=action value="DelMenuItems">					<input type=hidden name=MENU_ITEMS[MI_KEY] value={$arMENU_ITEMS[row].MI_KEY} >					<input type=hidden name=MENU_GROUP[MG_KEY] value={$MENU_GROUP.MG_KEY} >							<th onclick="return confirm('Are you sure you want to delete this?')"> <button type="submit" class="btn btn-primary">Delete Menu Item</button> </th>				</form>			</tr>	{/section}						<tr >				<form action={$SESSION.PostAction} method=post>					<input type=hidden name=action value="UpdMenuItems">					<input type=hidden name=MENU_ITEMS[MI_KEY] value="" >					<input type=hidden name=MENU_ITEMS[MI_MGKEY] value={$MENU_GROUP.MG_KEY} >					<input type=hidden name=MENU_GROUP[MG_KEY] value={$MENU_GROUP.MG_KEY} >					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_NAME] size=20></td>					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_SCRIPT] size=20}" ></td>					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_LEVEL] size=2}" ></td>					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_ORDER] size=2}" ></td>					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_BACKSCRIPT] size=20 value="{$arMENU_ITEMS[row].MI_BACKSCRIPT}" ></td>					<td> <input type=text class="form-control"  name=MENU_ITEMS[MI_NEXTSCRIPT] size=20 value="{$arMENU_ITEMS[row].MI_NEXTSCRIPT}" ></td>					<td>{html_options class="form-control"  name="MENU_ITEMS[MI_DISPLAY]" options=$arYesNo selected=$arMENU_ITEMS[row].MI_DISPLAY}</td>						<td colspan="2"> <button type="submit" class="btn btn-primary">Add</button> </th>				</form>			</tr>				{/if}		</table>  </div>  <div class="col-sm-1" ></div></div>	{include file=$SESSION.ENVIRONMENT.EN_FOOTER}

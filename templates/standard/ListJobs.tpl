{include file="header/admin_header.tpl"} <div class="row">  <div class="col-sm-1"></div>  <div class="col-sm-10">  <table class="table table-striped">    <thead>    	<form action={$SESSION.PostAction} method=post class="form-inline" role="form">		<input type=hidden name=action value="ListJobs">	      <tr >    		<th> Customer:  </th>    		<td> {html_options class="form-control" name=arCtl[CU_KEY] options=$arCustomerList selected=$arCtl.CU_KEY} </th>    		<th> Job Type:  </th>    		<td> {html_options class="form-control" name=arCtl[JT_KEY] options=$arJobTypeList selected=$arCtl.JT_KEY} </th>    		<th> Owner:  </th>    		<td> {html_options class="form-control" name=arCtl[US_KEY] options=$arOwnerList selected=$arCtl.US_KEY} </th>    		<th> <button type="submit" name=arCtl[Run] value="Run" class="btn btn-default ">Show</button></th>	      </tr>	 </form>	</thead>   </table>    	  <table class="table table-striped">	    <thead>			<tr ><th colspan="9">Jobs</th></tr>			<tr  align="center">				<th>Ref</th>				<th>Name</th>				<th>Customer</th>				<th>Type</th>				<th>Status</th>				<th>Next Step</th>				<th>Owner</th>				<th>Next Step Date</th>				<th></th>			</tr>		</thead>			{section name=row loop=$arJOBS}				<tr >					<td>{$arJOBS[row].JO_REFERENCE}</td>					<td>{$arJOBS[row].JO_CUSTOMERREF}</td>					<td>{$arJOBS[row].CU_NAME}</td>					<td>{$arJOBS[row].JT_NAME}</td>					<td>{$arJOBS[row].STATUS}</td>					<td>{$arJOBS[row].NEXTSTEP}</td>					<td>{$arJOBS[row].US_NAME}</td>					<td>{$arJOBS[row].NEXTSTEPDATE}</td>					<td> <a href="{$SESSION.PostAction}?action=ShowJob&JOBS[JO_KEY]={$arJOBS[row].JO_KEY}" > Details </A> </td>				</tr >			{/section}						</table>		  </div>  <div class="col-sm-1"></div></div>	    
{include file="header/admin_footer.tpl"}

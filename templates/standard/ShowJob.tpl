{include file="header/admin_header.tpl"} <div class="row">  <div class="col-sm-3"></div>  <div class="col-sm-6">      <table class="table table-striped">	      	    	<form action={$SESSION.PostAction} method=post class="form-inline" role="form">			<input type=hidden name=action value="UpdJob">		    <thead>			  <tr ><th colspan="9">{$arCtl.Title}</th></tr>    		</thead>		      <tr >		        <th> Customer </td>		        <td> {html_options  disabled=disabled class="form-control" name=JOBS[JO_CUKEY] options=$arCustomerList selected=$JOBS.JO_CUKEY} </td>		        <th> Job Type </td>		        <td> {html_options  disabled=disabled class="form-control" name=JOBS[JO_JTKEY] options=$arJobTypeList selected=$JOBS.JO_JTKEY} </td>		      </tr >		      <tr >		        <th> Customer Ref </td>		        <td> <input type=text class="form-control" name=JOBS[JO_CUSTOMERREF] value="{$JOBS.JO_CUSTOMERREF}"> </td>		        <th> Reference </td>		        <td> <input type=text class="form-control" name=JOBS[JO_REFERENCE] value="{$JOBS.JO_REFERENCE}"> </td>		      </tr>		      <tr >		        <th> Customer Location </td>		        <td> {html_options disabled=disabled class="form-control" name=JOBS[JO_LOKEY] options=$arLocationList selected=$JOBS.JO_LOKEY} </td>		        <th> {$JOBS.JT_TARGETDATENAME} </td>		        <td> <input type=text class="form-control" name=JOBS[JO_TARGETDATE] value="{$JOBS.JO_TARGETDATE}"> </td>		      </tr >		      <tr >		        <th> {$JOBS.JT_OWNERTYPE} </td>		        <td> {html_options class="form-control" name=JOBS[JO_OWNER_USKEY] options=$arOwnerList selected=$JOBS.JO_OWNER_USKEY} </td>		        <th> {$JOBS.JT_OWNERTYPE2} </td>		        <td> {html_options class="form-control" name=JOBS[JO_OWNER_USKEY2] options=$arOwner2List selected=$JOBS.JO_OWNER_USKEY2} </td>		      </tr>		   <tr>	      	        <td colspan=4 align="center"> <button type="submit" name=arCtl[Run] value="Run" class="btn btn-default ">Update Job</button> </td>	      </tr>	      	 </form>	 </table>    <table class="table table-striped">		    <thead>			  <tr ><th colspan="9">Job Steps</th></tr>    		</thead>			<tr>				<th colspan=2> Step </th>				<th> Start </th> 				<th> End </th> 				<th> Who </th> 				<th> Complete </th> 				<th> </th>			</tr>					      	{section name=row loop=$arJOBSTEPS}	    	<form action={$SESSION.PostAction} method=post class="form-inline" role="form">			<input type=hidden name=action value="UpdJobStep">		      <tr >		        <td> {$arJOBSTEPS[row].JTS_PHASENAME} </td>		        <td> {$arJOBSTEPS[row].JTS_NAME} </td>				<td> {$arJOBSTEPS[row].JOS_STARTDATE_FORECAST} </th> 				<td> {$arJOBSTEPS[row].JOS_ENDDATE_FORECAST} </th> 				<td> {$arJOBSTEPS[row].US_NAME} </th> 				<td>					{if  $arJOBSTEPS[row].JOS_ENDDATE == ""}						Open					{elseif $arJOBSTEPS[row].JOS_ENDDATE != ""}						{$arJOBSTEPS[row].JOS_ENDDATE}					{/if}								 </th> 				<td> <a href="#{$arJOBSTEPS[row].JOS_KEY}" data-toggle="collapse"> Amend</A>  </th>		       </tr>		       <tr class="collapse" id={$arJOBSTEPS[row].JOS_KEY}>		       		<td colspan=7>		       			  <table class="table table-striped">						    <thead>							  <tr ><th colspan="4"> Step Details</th></tr>				    		</thead>							<tr>								<td> Forecast Start Date	</td>       			  								<td> <input type=text name=JOBSTEPS[JOS_STARTDATE_FORECAST] value="{$arJOBSTEPS[row].JOS_STARTDATE_FORECAST}"></td>       			  								<td> Forecast End Date	</td>       			  								<td> <input type=text name=JOBSTEPS[JOS_ENDDATE_FORECAST] value="{$arJOBSTEPS[row].JOS_ENDDATE_FORECAST}"></td>       			  		       			  	</tr>							<tr>								<td> Owner	</td>       			  								<td> {html_options class="form-control" name=JOBSTEPS[JOS_OWNER_USKEY] options=$arFullOwnerList selected=$arJOBSTEPS[row].JOS_OWNER_USKEY} </td>       			  								<td> End Date	</td>       			  								<td> {$arJOBSTEPS[row].JOS_ENDDATE}</td>       			  		       			  	</tr>							<tr>								<td> Comments	</td>       			  								<td colspan=3> <textarea cols=60 rows=3 name=JOBSTEPS[JOS_COMMENTS] >{$arJOBSTEPS[row].JOS_COMMENTS} </textarea> </td>       			  		       			  	</tr>							{assign var=arFIELDS value=$arJOBSTEPS[row].FIELDS}						      	{section name=row2 loop=$arFIELDS}									<tr>										<td colspan=2> {$arFIELDS[row2].JTSF_NAME}	</td>       			  										<td colspan=2> 																				{if $arFIELDS[row2].JTSF_TYPE == "TEXT"}											<input type=text calss="form-control" >										{elseif $arFIELDS[row2].JTSF_TYPE == "FILE"}											<input type=file calss="form-control" >										{/if}																				 </td>       			  				       			  	</tr>		       					{/section}	  		       					       				<tr>	      	        					<td colspan=4 align="center"> <button type="submit" name=arCtl[Run] value="Run" class="btn btn-default ">Update Step</button> </td>	      					</tr>		       					       			  </table>		       		</td>		       </tr>		       		       			 </form>			{/section}	 </table>		  </div>  <div class="col-sm-3"></div></div>	    
{include file="header/admin_footer.tpl"}
